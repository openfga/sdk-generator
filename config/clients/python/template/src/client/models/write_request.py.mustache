    @property
    def on_duplicate(self) -> str | None:
        """
        Return on_duplicate
        """
        return self._on_duplicate

    @on_duplicate.setter
    def on_duplicate(self, value: str | None) -> None:
        """
        Set on_duplicate
        """
        self._on_duplicate = value

